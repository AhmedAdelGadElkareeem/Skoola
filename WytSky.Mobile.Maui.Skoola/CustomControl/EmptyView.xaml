<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentView
    x:Class="WytSky.Mobile.Maui.Skoola.CustomControl.EmptyView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:base="clr-namespace:WytSky.Mobile.Maui.Skoola.CustomControl"
    xmlns:resources="clr-namespace:WytSky.Mobile.Maui.Skoola.AppResources"
    HorizontalOptions="CenterAndExpand"
    VerticalOptions="CenterAndExpand">
    <VerticalStackLayout
        x:Name="stack"
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="CenterAndExpand">
        <Label
            HorizontalOptions="CenterAndExpand"
            Style="{StaticResource BoldLabelFont18}"
            Text="{x:Static resources:SharedResources.Msg_NoDataFound}"
            TextColor="{StaticResource Black}"
            VerticalOptions="CenterAndExpand" />
    </VerticalStackLayout>
</base:BaseContentView>